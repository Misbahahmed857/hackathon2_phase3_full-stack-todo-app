FROM python:3.11

WORKDIR /app

# Install only essential system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Copy only essential requirements
RUN echo "fastapi==0.104.1" > requirements.txt && \
    echo "uvicorn[standard]==0.24.0" >> requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Create a minimal app to test
RUN mkdir -p src && \
    echo "from fastapi import FastAPI" > src/main.py && \
    echo "app = FastAPI()" >> src/main.py && \
    echo "" >> src/main.py && \
    echo "@app.get('/')" >> src/main.py && \
    echo "def read_root():" >> src/main.py && \
    echo "    return {'Hello': 'World'}" >> src/main.py

EXPOSE 8000

CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]